@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BookShop.Presentation.MVC.Models.ViewModels.CreateBookViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<link rel="stylesheet" href="~/css/book-form.css" />
<form asp-action="CreateBook" method="post" enctype="multipart/form-data">
    <input asp-for="Book.Title" type="text" placeholder="نام کتاب" />
    <input asp-for="Book.Author" type="text" placeholder="نویسنده" />
    <input asp-for="Book.Price" type="number" step="0.01" placeholder="قیمت" />
    <input asp-for="Book.PageCount" type="text" placeholder="تعداد صفحه" />
    <input asp-for="Book.File" type="file" placeholder="Image" />

    <select asp-for="Book.CategoryId">
        @foreach (var item in @Model.Categories)
        {
            <option value="@item.Id">@item.Title</option>
        }
    </select>

    <input type="submit" value="Create" />
</form>