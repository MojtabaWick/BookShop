@using BookShop.Presentation.MVC.Models.ViewModels
@model LoginViewModel;
@{
    Layout = "_Layout";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%; border-radius: 1rem;">
        <div class="text-center mb-4">
            <h2 class="fw-bold text-primary">فروشگاه کتاب</h2>
            <p class="text-muted">به حساب کاربری خود وارد شوید</p>
        </div>

        <form method="post" asp-action="Login">
            <div class="mb-3 text-end">
                <label for="Mobile" class="form-label">شماره موبایل</label>
                <input type="tel"
                       class="form-control text-end"
                       id="Mobile"
                       name="Mobile"
                       placeholder="مثال: 09121234567"
                       required />
            </div>

            <div class="mb-3 text-end">
                <label for="Password" class="form-label">رمز عبور</label>
                <input type="password"
                       class="form-control text-end"
                       id="Password"
                       name="Password"
                       placeholder="••••••••"
                       required />
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="text-danger text-center mb-3">@ViewBag.Error</div>
            }

            <button type="submit" class="btn btn-primary w-100 py-2 fw-bold">
                ورود
            </button>
        </form>

        <div class="text-center mt-4">
            <a href="#" class="text-decoration-none">رمز عبور خود را فراموش کرده‌اید؟</a>
            <hr />
            <p class="text-muted">
                حساب ندارید؟
                <a asp-controller="Account" asp-action="Register" class="fw-bold text-primary text-decoration-none">ثبت‌نام کنید</a>
            </p>
        </div>
    </div>
</div>
