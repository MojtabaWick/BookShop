
<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - داشبورد ادمین</title>

    <!-- Bootstrap RTL -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" />

    <!-- فونت وزیر -->
    <link href="https://cdn.jsdelivr.net/gh/rastikerdar/vazir-font@v30.1.0/dist/font-face.css" rel="stylesheet" />

    <!-- استایل سفارشی -->
    <style>
        body {
            font-family: 'Vazir', sans-serif;
            background-color: #f8f9fa;
        }

        .sidebar {
            width: 240px;
            background-color: #343a40;
            min-height: 100vh;
            position: fixed;
            top: 0;
            right: 0;
            padding-top: 60px;
        }

            .sidebar a {
                color: #fff;
                display: block;
                padding: 12px 20px;
                text-decoration: none;
            }

                .sidebar a:hover {
                    background-color: #495057;
                }

        .main-content {
            margin-right: 240px;
            padding: 20px;
        }

        .navbar {
            position: fixed;
            top: 0;
            right: 0;
            left: 0;
            z-index: 1030;
        }
    </style>
</head>
<body>
    <!-- نوار بالا -->
    <nav class="navbar navbar-light bg-white shadow-sm border-bottom">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <span class="navbar-brand mb-0 h5">پنل مدیریت</span>

            <div class="d-flex align-items-center">
                <span class="me-3 text-secondary">@ViewBag.FullName</span>
                <a class="btn btn-outline-danger btn-sm" asp-controller="Account" asp-action="Logout">خروج</a>
            </div>
        </div>
    </nav>

    <!-- سایدبار -->
    <div class="sidebar">
        <a asp-controller="Admin" asp-action="Users">👤 مدیریت کاربران</a>
        <a asp-controller="Admin" asp-action="Categories">📚 مدیریت دسته‌بندی‌ها</a>
        <a asp-controller="Admin" asp-action="Books">📖 مدیریت کتاب‌ها</a>
    </div>

    <!-- محتوای اصلی -->
    <div class="main-content">
        <div class="container-fluid mt-4 pt-4">
            @RenderBody()
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
